---
import Icon from "@components/ui/icons/Icon.astro";
// Header CTA button for use in the navbar/header only (half rectangle, half pill shape)
const { title, url, noArrow, noZapIcon } = Astro.props;
interface Props {
  title?: string;
  url?: string;
  noArrow?: boolean;
  noZapIcon?: boolean;
}
const baseClasses =
  "group inline-flex items-center justify-center gap-x-2 px-4 py-6 text-sm font-bold text-neutral-50 ring-zinc-500 transition duration-300 focus-visible:ring-3 outline-hidden";
const borderClasses = "border border-transparent";
const bgColorClasses =
  "bg-orange-400 hover:bg-orange-500 active:bg-orange-500 dark:focus:outline-hidden";
const disableClasses = "disabled:pointer-events-none disabled:opacity-50";
const fontSizeClasses = "2xl:text-base";
const ringClasses = "dark:ring-zinc-200";
// Note the updated rounding class: `rounded-r-full` creates the pill shape on the right,
// while the absence of a left-rounding class makes the left edge square.
const shapeClasses = "rounded-r-full";
---

<!-- Header CTA button (half rectangle, half pill, navbar use only) -->
<a
  class={`${baseClasses} ${shapeClasses} ${borderClasses} ${bgColorClasses} ${disableClasses} ${fontSizeClasses} ${ringClasses}`}
  href={url}
>
  {noZapIcon ? null : <Icon name="zap" />}
  {title}
  <!-- Display the arrow based on the 'noArrow' property -->
  {noArrow ? null : <Icon name="arrowRight" />}
</a>
