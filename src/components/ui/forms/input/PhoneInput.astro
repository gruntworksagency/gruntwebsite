---
const { label = "Phone Number", id } = Astro.props;

interface Props {
  label?: string;
  id: string;
}
---

<div>
  <label for={id} class="sr-only">{label}</label>
  <input
    type="tel"
    name="hs-phone-number"
    id={id}
    class="block w-full rounded-lg border border-neutral-200 border-neutral-600 bg-neutral-50 bg-neutral-700/30 px-4 py-3 text-sm text-neutral-700 placeholder:text-neutral-400 placeholder:text-neutral-500 focus:border-neutral-200 focus:ring-1 focus:ring-3 focus:ring-neutral-400 focus:outline-hidden disabled:pointer-events-none disabled:opacity-50"
    placeholder={label}
  />
</div>
